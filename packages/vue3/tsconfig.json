{
    "compilerOptions": {
      /* Basic Options */
      "target": "es2018",
      "module": "esNext",
      "lib": ["esnext", "dom"],
      "allowJs": true,
      "checkJs": false,
      "jsx": "preserve",
      "incremental": true,
      "noEmit": true,
  
      /* Strict Type-Checking Options */
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
  
      /* Additional Checks */
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": false,
      "skipLibCheck": true,
  
      /* Module Resolution Options */
      "baseUrl": ".",
      "paths": {
        /* Support absolute /imports/* with a leading '/' */
        "/*": ["*"],
        //"element-plus": ["node_modules/element-plus/types"]

      },
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "mocha", "element-plus/global"],
      "esModuleInterop": true,
      "preserveSymlinks": true
    },
    "exclude": ["./.meteor/**", "./packages/**"]
    
    
  
    //"include": ["./src/**/*.ts", "./src/**/*.d.ts"],
    //"exclude": ["node_modules", ".meteor"]
      
  }
  